@page
@model MarioKart.Pages.Clientes.CrearClienteModel
@{
    ViewData["Title"] = "Crear Cliente";
}

<h1>Creando Cliente</h1>


<form action="/" method="post">
    <input type="hidden" asp-for="Cliente.Id_Cliente" />

    <div class="form-group">
        <label asp-for="Cliente.Nombre">Nombre</label>
        <input asp-for="Cliente.Nombre" type="Text" class="form-control" />
        <span class="text-danger" asp-validation-for="Cliente.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Apellido">Apellido</label>
        <input asp-for="Cliente.Apellido" type="Text" class="form-control" />
        <span class="text-danger" asp-validation-for="Cliente.Apellido"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Cedula">Cedula</label>
        <input asp-for="Cliente.Cedula" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Cliente.Cedula"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Email">Correo Electronico</label>
        <input asp-for="Cliente.Email" type="email" class="form-control" />
        <span class="text-danger" asp-validation-for="Cliente.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Sexo">Sexo</label>
        <select asp-for="Cliente.Sexo" asp-items="@Model.Sexo" class="form-control">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>>
</form>>
